{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "blocks-course/text-box",
	"version": "0.1.0",
	"title": "Text-Box",
	"category": "text",
	"description": "A box of text.",
	"keywords": [
		"text",
		"text-box",
		"paragraph",
		"content"
	],
	"example": {},
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"gradients": true
		},
		"spacing": {
			"padding": true
		}
	},
	"styles": [
		{
			"name": "Squared",
			"label": "Squared",
			"isDefault": true
		},
		{
			"name": "rounded",
			"label": "rounded"
		}
	],
	"textdomain": "text-box",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"attributes": {
		"text": {
			"type": "string",
			"default":"Some text"
		},
		"alignment": {
			"type": "string",
			"default": "left"
		},
		"backgroundColor": {
			"type": "string"
		},
		"textColor": {
			"type": "string"
		},
		"shadow": {
			"type": "boolean",
			"default": false
		},
		"shadowOpacity": {
			"type": "number",
			"default": 30
		},
		"style": {
			"type": "object",
			"default": {
				"color": {
					"background": "#6E7787"
				},
				"spacing": {
					"padding": {
						"top": "50px",
						"right": "50px",
						"bottom": "50px",
						"left": "50px"
					}
				}
			}
		}
	}
}